<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeShareDrawable">@drawable/ic_share_white_24dp</item>
    </style>

    <style name="TituloCardView" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/card_view_title</item>
    </style>

    <style name="DescricaoCardView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/card_view_desc</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
